page {
  background-color: #eee;
}
.fb_main {
  padding: 10rpx;
  color: #666;
}
.fb_main .fb_tip {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.fb_main .fb_tip text {
  margin: 10rpx;
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
}
.fb_main .fb_content {
  background-color: #fff;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 15rpx;
}
.fb_main .fb_content .fb_tool button {
  margin: 10rpx;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ccc;
}
.fb_main .fb_content .fb_tool .up_img_itme {
  margin: 10rpx 15rpx;
}
.fb_main .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .form_btn_wrap button {
  margin: 0;
  widows: 30%;
}
.fb_main .form_btn_wrap button icon {
  vertical-align: -6px;
}
