<searchInput></searchInput>
<tabs tabs="{{tabs}}" bindtabItemChange="handletabItemChange">
    <block wx:if="{{tabs[0].isActive}}">
        <view class="first_tab">
            <navigator class="goods_item" wx:for="{{goodsList}}" wx:key="goods_id" url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
                <view class="goods_img_wrap">
                    <image src="{{item.goods_small_logo?item.goods_small_logo:'https://ae01.alicdn.com/kf/He982328d130f413bba26104de00c38f0H.jpg'}}" mode="widthFix"/>
                </view>
                <view class="goods_info_wrap">
                    <view class="goods_name">{{item.goods_name}}</view>
                    <view class="goods_price">ï¿¥{{item.goods_price}}</view>
                </view>
            </navigator>
        </view>
    </block>
    <block wx:elif="{{tabs[1].isActive}}">1</block>
    <block wx:else>2</block>
</tabs>